{
  "defaultEnv": "pg",

  "pg": {
    "driver": "pg",
    "user": {"ENV": "DB_USER"},
    "password": {"ENV": "DB_PASSWORD"},
    "host": {"ENV": "DB_HOST"},
    "database": {"ENV": "DB_DATABASE"},
    "port": {"ENV": "DB_PORT"},
    "schema": "public",
    "multipleStatements": true
  },

  "dev": {
    "driver": "sqlite3",
    "filename": "~/dev.db"
  },

  "test": {
    "driver": "sqlite3",
    "filename": ":memory:"
  },

  "prod": {
    "driver": "mysql",
    "user": "root",
    "password": "root"
  },

  "mongo": {
    "driver": "mongodb",
    "database": "my_db",
    "host": "localhost"
  },

  "other": "postgres://uname:pw@server.com/dbname"
}